@model Food_Application.Models.FoodItems;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Details";
}

<br/>
<h2 class ="text-info">Food Items Details</h2>
<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <input type="hidden" asp-for="Id"/>
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductName"></label>

            </div>
            <div class="col-5">
                <input asp-for="ProductName" readonly="readonly" class="form-control"/>
            </div>
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="form-group">
            
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ">EDIT</a>
            <a asp-action="Index" class="btn-success btn "></a>
            @*<input type="submit" class="btn-success btn " value="BACK TO LIST"/>*@
        </div>
    </div>
</form>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}